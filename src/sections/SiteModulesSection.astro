    link: "/licznik",
    img: MediaIcon,
  },
  {
    name: "Zdjęcia",
    desc: "Twoi goście będzią mogli zobaczyć ile jeszcze pozostało do uroczystości",
    link: "/licznik",
    img: MediaIcon,
  },
  {
    name: "Potwierdzenie przybycia",
    desc: "Twoi goście będzią mogli ",
    link: "/licznik",
    img: MediaIcon,
  },
];
---

<section class="my-24 lg:my-32">
  <AstroContainer>
    <h2 class="text-4xl lg:text-5xl text-primary">
      Co znajdziesz na swojej stronie?
    </h2>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 my-14 w-full"
    >
      {
        modules.map((module) => (
          <div class="border-2 h-full mx-auto border-primary rounded-t-full pt-32 pb-10 px-10 lg:px-20 max-w-[30rem] w-full flex flex-col text-primary justify-center gap-6 items-center">
            <MediaIcon />
            <p class="text-5xl text-cormorant  uppercase text-center">
              {module.name}
            </p>
            <p class="text-center">{module.desc}</p>
            <a
              class="bg-primary font-semibold px-8 py-4 text-white w-full text-center mt-auto"
              href={module.link}
            >
              Czytaj więcej
            </a>
          </div>
        ))
      }
    </div>
  </AstroContainer>
</section>
