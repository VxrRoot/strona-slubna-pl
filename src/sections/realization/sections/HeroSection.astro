---
import AstroContainer from "../components/AstroContainer.astro";
import Countdown from "../components/Countdown.astro";
import { FlipWords } from "../components/FlipWords";
---

<section
  class="bg-cover hero-section h-screen bg-center bg-[url(/realizacja.webp)] flex flex-col justify-end items-cente"
>
  <div
    class="flex flex-col items-center from-[#6C4E3F] to-white/1 py-[200px] bg-gradient-to-t"
  >
    <AstroContainer>
      <div class="container">
        <div
          class="absolute bottom-[12rem] left-1/2 w-100 -translate-x-1/2  text-center overflow-hidden"
        >
          <FlipWords
            className="text-4xl px-4 h-[5rem] text-white lg:text-5xl md:mb-0 mb-8 text-center w-screen"
            words={[
              "Jak pewnie już wiesz bierzemy ślub",
              "Liczymy na twoją obecność",
              "Niżej możesz sie zapoznać ze szczegółami",
            ]}
            client:load
          />
          <Countdown />
        </div>
      </div>
    </AstroContainer>
  </div>
</section>

<style lang="scss">
  .hero-section {
    background-image: linear-gradient(#422f25,transparent 20%,transparent 50%, var(--primary)),
      url("/realizacja.webp");
    background-position: bottom;
  }
</style>