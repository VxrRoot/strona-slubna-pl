---
import AstroContainer from "../components/AstroContainer.astro";
import Countdown from "../components/Countdown.astro";
import { FlipWords } from "../components/FlipWords";
---

<section
  class="bg-cover min-h-screen bg-center bg-[url(/realizacja.webp)] flex flex-col justify-end items-cente"
>
  <div
    class="flex flex-col items-center from-[#6C4E3F] to-white/1 py-[200px] bg-gradient-to-t"
  >
    <AstroContainer>
      <div class="container">
        <div
          class="absolute top-1/2 left-1/2 w-100 -translate-x-1/2 -translate-y-[60px] text-center"
        >
          <FlipWords
            className="text-4xl px-4 text-white lg:text-5xl w-full text-center mb-16"
            words={[
              "Jak pewnie już wiesz bierzemy ślub",
              "Liczymy na twoją obecność",
              "Niżej możesz sie zapoznać ze szczegółami",
            ]}
            client:load
          />
          <Countdown />
        </div>
      </div>
    </AstroContainer>
  </div>
</section>
